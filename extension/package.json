{
  "name": "vstarcoder",
  "displayName": "VStarCoder Extension",
  "description": "Code autocompletion based on huggingface inference API",
  "version": "0.0.2",
  "publisher": "piratos",
  "engines": {
    "vscode": "^1.79.1"
  },
  "categories": [
    "Other"
  ],
  "icon": "./icons/light-icon.png",
  "activationEvents": [
    "onLanguage:python"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.sendLineToApi",
        "title": "Send Line to API"
      },
      {
        "command": "extension.sendWordsToApi",
        "title": "Send words to API (websocket version)"
      },
      {
        "command": "extension.sendSelectionToApi",
        "title": "Send Selection to API"
      }
    ],
    "keybindings": [
      {
        "command": "extension.sendLineToApi",
        "key": "ctrl+k ctrl+k",
        "mac": "cmd+k cmd+k",
        "when": "editorTextFocus"
      },
      {
        "command": "extension.sendSelectionToApi",
        "key": "ctrl+m ctrl+m",
        "mac": "cmd+l cmd+l",
        "when": "editorTextFocus"
      },
      {
        "command": "extension.sendWordsToApi",
        "key": "ctrl+l ctrl+l",
        "mac": "cmd+l cmd+l",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "VStarCoder Extension",
      "properties": {
        "lineToApi.maxTokens": {
          "type": "number",
          "default": 128,
          "description": "max number of token to generate"
        },
        "lineToApi.apiEndpoint": {
          "type": "string",
          "default": "http://example.com/api/generate",
          "description": "The API endpoint to send the current line to."
        },
        "lineToApi.websocketEndpoint": {
          "type": "string",
          "default": "http://example.com/ws/generate",
          "description": "The WebSocket endpoint to send the current line to."
        }

      }
    }
  },
  "devDependencies": {
    "@types/vscode": "^1.79.1",
    "@types/ws": "^8.5.5",
    "@vscode/vsce": "^2.19.0",
    "typescript": "^5.1.3",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "axios": "1.4.0",
    "ws": "^8.13.0"
  },
  "scripts": {
    "build": "npm run compile && npm run package && npm run install",
    "compile": "tsc",
    "package": "vsce package --allow-missing-repository",
    "install": "code --install-extension vstarcoder-${npm_package_version}.vsix --force"
  }
}
